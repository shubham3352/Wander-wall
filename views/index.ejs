<% include partials/header %>

<div class="container">
	<div class="jumbotron">
		<div class="container">
			<h1>Welcome to E-Mage Gallery</h1>
			<p><a class="btn btn-primary btn-lg" href="/allimage/add">Add New Image</a></p>
		</div>
	</div> 

	<div class="row" style="display:flex;flex-wrap:wrap;">
		<% img.forEach(function(img){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= img.image %>" style="width:100%;height:200px;">
					<div class="caption">
						
						<h3><%= img.name %><p style="display: inline; float: right;"> <%= img.likes %></p>
							</h3>
							
						<p>
							<form action="/allimage/<%= img._id %>" method="POST" >
							<a href="/allimage/<%= img._id %>" class="btn btn-primary"style="display: inline-block; float: left;">More Info</a>

							 <input type="submit" name="Like" value="Like" style="display: inline-block; float: right;"> 
      							</form>
						</p>
					
					</div>
			</div>
		</div>
	
<% }) %>
	</div>
</div>

<% include partials/footer %>
